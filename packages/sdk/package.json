{
  "name": "@offline-sync/sdk",
  "version": "0.1.0",
  "description": "Offline Sync Engine SDK - Local-first database with background synchronization",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./outbox": {
      "types": "./dist/outbox/index.d.ts",
      "import": "./dist/outbox/index.js"
    },
    "./network": {
      "types": "./dist/network/index.d.ts",
      "import": "./dist/network/index.js"
    },
    "./sync": {
      "types": "./dist/sync/index.d.ts",
      "import": "./dist/sync/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:perf": "vitest run src/performance.test.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "offline",
    "sync",
    "local-first",
    "rxdb",
    "indexeddb"
  ],
  "dependencies": {
    "@msgpack/msgpack": "^3.1.3",
    "pako": "^2.1.0",
    "rxjs": "^7.8.1"
  },
  "peerDependencies": {
    "rxdb": "^15.28.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/pako": "^2.0.4",
    "rxdb": "^15.28.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
